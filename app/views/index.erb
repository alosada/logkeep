<div data-component='navbar' class="top-bar">
  <header data-component='navbar' class='in-line float-l'><span class='lgray'>Log</span><span class='orange'>Keep</span></header>
  <a class='in-line float-r' href="/logoff">Log off</a>
</div>
<div class="bodydiv">
  <div data-component="new-log-form-container"></div>
    <div class="header-div content">
      <header data-component="main-header" class="in-line">Posts</header>
      <button data-component="new-log" class="button in-line float-r">New Post</button>
    </div>
  <div data-component="log-list" class="content">
    <% @logs.each do |log| %>
    <div data-component="<%=log.id%>" class="log">
      <header data-component="log-title"><%=log.title%></header>
      <p data-component="log-description" class="limit-text"><%=log.description%></p><br>
      <p data-component="log-started" class='in-line'>Start date:<%=log.created_at%></p>
      <p data-component="log-closed" class='in-line'>End date: <%=log.open ? ('Open log'): (log.updated_at)%></p><br>
      <p data-component="log-events" class='in-line'>Events: <%=log.events.length%></p>
      <a data-component="view-log" class='in-line float-r' href="#">View log</a><br>
    </div>
    <%end%>
  </div>
  </div>
</div>

<div  data-component="hidden-form" style="display: none">
  <div data-component="log-template" class="log">
    <form data-component="log-form">
      Log title: <input type="text" name="title" size="50" class='bmargin-5'placeholder="enter a title"><br>
      Log description:<br>
      <div class='bmargin-5'><textarea name='description' rows="10" cols="60" placeholder="enter a description here." class="hcenter"></textarea></div><br>
      <input id='clog' data-component="create-log" type="submit" value="Create log" class='float-r button bmargin-5'><br>
    </form>
  </div>
</div>



 <div  class="hidden-template" style="display: none">
  <div data-component="log" class="log">
    <header data-component="log-title"></header>
    <p data-component="log-description"></p>
    <p data-component="log-started" class='in-line'></p>
    <p data-component="log-closed" class='in-line'></p>
    <p data-component="log-events" class='in-line'></p>
    <a data-component="view-log" class='in-line' href="#">View log</a><br>
  </div>
</div>
