<div id='pop-up'>
  <div class='pop-up-body'>
    <a href='#' class='float-r close'>X</a><br>
    <div data-component="<%=@log.id%>" class="log">
      <header data-component="log-title"><%=@log.title%></header>
      <p data-component="log-description"><%=@log.description%></p><br>
      <p data-component="log-started" class='in-line'>Start date:<%=@log.created_at%></p>
      <p data-component="log-closed" class='in-line'>End date: <%=@log.open ? ('Open log'): (@log.updated_at)%></p><br>
      <p data-component="log-events" class='in-line'>Events: <%=@log.events.length%></p>
      <a data-component="view-log" class='in-line float-r' href="#">View log</a><br>
    </div>
    <div data-component="event-list" class='event-list'>
      <div class="header-div content">
      <header data-component="main-header" class="in-line">Events</header>
      <button data-component="new-eve" class="button in-line float-r">New Event</button>
    </div>
    <%@events.each do |event|%>
      <div data-event="<%=event.id%>" class="event">
        <header data-component="log-title"><%=event.title%></header>
        <p data-component="log-description" class="limit-text"><%=event.description%></p><br>
        <p data-component="log-started" class='in-line'>Start date:<%=event.created_at%></p>
      </div>
    <%end%></div>
    </div>
</div>

<div  data-component="event-form" style="display: none">
  <div data-component="log-template" class="log">
    <form data-component="log-form">
      Event title: <input type="text" name="title" size="40" class='bmargin-5'placeholder="enter a title"><br>
      Event description:<br>
      <div class='bmargin-5'><textarea name='description' rows="10" cols="50" placeholder="enter a description here." class="hcenter"></textarea></div><br>
      <input id='clog' data-component="create-log" type="submit" value="Create log" class='float-r button bmargin-5'><br>
    </form>
  </div>
</div>
